{
    "name": "{{ cookiecutter.project_name }} frontend",
    "version": "{{ cookiecutter.__version }}",
    "description": "The project frontend stack.",
    "author": "David THENON <sveetch@gmail.com>",
    "private": true,
    "scripts": {
        "css": "node-sass --include-path node_modules --output ../project/static-sources/css/ ./scss/",
        "css-prod": "node-sass --output-style compressed --include-path node_modules --output ../project/static-sources/css/ ./scss/",
        "watch-css": "nodemon --watch scss/ --ext scss --exec \"npm run-script css\"",
        "js": "webpack --mode development --progress",
        "js-prod": "webpack --mode production --progress",
        "watch-js": "nodemon --watch js/ --ext js --exec \"npm run-script js\""
    },
    "dependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@popperjs/core": "^2.9.3",
        "autoprefixer": "^10.3.0",
        "babel-loader": "^8.2.2",
        "bootstrap": "{{ cookiecutter._bootstrap_version }}",
        "bootstrap-icons": "^1.9.1",
        "jquery": "^3.6.0",
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "node-sass": "^7.0.1",
        "nodemon": "^2.0.16",
        "npm-run-all": "^4.1.5",
        "stylelint": "^14.9.1",
        "stylelint-config-standard-scss": "^4.0.0",
        "webpack": "{{ cookiecutter._webpack_version }}",
        "webpack-bundle-tracker": "^1.4.0",
        "webpack-cli": "^4.7.2"
    },
    "engines": {
        "node": "{{ cookiecutter._node_version }}",
        "npm": "{{ cookiecutter._npm_version }}"
    },
    "browserslist": [
        ">= 0.5%",
        "last 2 major versions",
        "not dead",
        "Chrome >= 60",
        "Firefox >= 60",
        "Firefox ESR",
        "iOS >= 12",
        "Safari >= 12",
        "not Explorer <= 11"
    ]
}
